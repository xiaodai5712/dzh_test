<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".andr.senior.EleventhActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/af_combobox_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_eleventh_filter1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_down"
            android:onClick="changeFilter1"
            android:padding="10dp"
            android:text="全部性别"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/id_eleventh_filter2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_down"
            android:onClick="changeFilter2"
            android:padding="10dp"
            android:text="全部年龄"
            android:textSize="18sp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/id_id_eleventh_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>