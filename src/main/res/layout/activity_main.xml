<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_button_second"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:text="Second"
        android:background="@drawable/bg_button_state"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_btn_third"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:text="Third"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:visibility="visible"
        android:background="@drawable/bg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_button_second" />

    <Button
        android:id="@+id/id_btn_dlg"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:text="Dlg"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_third" />

    <Button
        android:id="@+id/id_btn_fourth"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="Fourth"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_dlg" />

</androidx.constraintlayout.widget.ConstraintLayout>